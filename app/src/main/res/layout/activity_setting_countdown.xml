<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ev.gone.fubiz.Views.SettingCountdownActivity"
    android:background="@color/cyanBackground"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|start">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/back_to_alpha_main"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/backarrow" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_weight="2"
        >

        <NumberPicker
            android:id="@+id/npHours"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
        </NumberPicker>

        <NumberPicker
            android:id="@+id/npMinutes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/npHours">
        </NumberPicker>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btnOK"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:background="@drawable/button_countdown"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>




</LinearLayout>
